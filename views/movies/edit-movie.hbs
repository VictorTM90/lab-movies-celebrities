<h2>Edit movie info</h2>

<form method="POST" action="/movies/{{updatedMovie._id}}">

<label for="title">Title</label>
<input type="text" name="title" value="{{updatedMovie.title}}">

<label for="genre">Genre</label>
<input type="text" name="genre" value="{{updatedMovie.genre}}">

<label for="plot">Plot</label>
<input type="text" name="plot" value="{{updatedMovie.plot}}">

<select name="cast" multiple>

      {{#each allCellebrities}}

      <option value="{{this._id}}">{{this.name}}</option>

      {{/each}}

    </select>

    <button>Submit</button>

</form>